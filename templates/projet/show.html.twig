{% extends 'base.html.twig' %}

{% block title %}Détails du projet{% endblock %}

{% block body %}
    <h1>Détails du projet</h1>

    <table>
        <tr>
            <th>ID</th>
            <td>{{ projet.idP }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ projet.nomP }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ projet.descriptionP }}</td>
        </tr>
        <tr>
            <th>Date de début</th>
            <td>{{ projet.dateDebut|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Date de fin</th>
            <td>{{ projet.dateFin|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Statut</th>
            <td>{{ projet.statuts }}</td>
        </tr>
    </table>

    <a href="{{ path('app_projet_index') }}">Retour à la liste</a>
    <a href="{{ path('app_projet_edit', {'id': projet.id}) }}">Modifier</a>
    <form method="post" action="{{ path('app_projet_delete', {'id': projet.id}) }}" style="display:inline-block;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ projet.id) }}">
        <button type="submit">Supprimer</button>
    </form>
{% endblock %}
