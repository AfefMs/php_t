{% extends 'base.html.twig' %}

{% block title %}Modifier le projet{% endblock %}

{% block body %}
    <h1>Modifier le projet</h1>

    {{ form_start(form) }}
        {{ form_row(form.idP, {'label': 'ID du projet'}) }}
        {{ form_row(form.nomP, {'label': 'Nom'}) }}
        {{ form_row(form.descriptionP, {'label': 'Description'}) }}
        {{ form_row(form.dateDebut, {'label': 'Date de début'}) }}
        {{ form_row(form.dateFin, {'label': 'Date de fin'}) }}
        {{ form_row(form.statuts, {'label': 'Statut'}) }}
        <button class="btn">Mettre à jour</button>
    {{ form_end(form) }}

    <a href="{{ path('app_projet_index') }}">Retour à la liste</a>
{% endblock %}
