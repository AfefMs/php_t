{% extends 'base.html.twig' %}

{% block title %}Détails de la tâche{% endblock %}

{% block body %}
    <h1>Détails de la tâche</h1>

    <table>
        <tr>
            <th>ID</th>
            <td>{{ tache.idT }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ tache.nomT }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ tache.descriptionT }}</td>
        </tr>
        <tr>
            <th>Date de début</th>
            <td>{{ tache.dateDebut|date('Y-m-d H:i') }}</td>
        </tr>
        <tr>
            <th>Date de fin</th>
            <td>{{ tache.dateFin|date('Y-m-d H:i') }}</td>
        </tr>
        <tr>
            <th>Statut</th>
            <td>{{ tache.statusT }}</td>
        </tr>
        <tr>
            <th>Projet</th>
            <td>{{ tache.PrjetT }}</td>
        </tr>
    </table>

    <a href="{{ path('app_tache_index') }}">Retour à la liste</a>
    <a href="{{ path('app_tache_edit', {'id': tache.id}) }}">Modifier</a>
    <form method="post" action="{{ path('app_tache_delete', {'id': tache.id}) }}" style="display:inline-block;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tache.id) }}">
        <button type="submit">Supprimer</button>
    </form>
{% endblock %}
